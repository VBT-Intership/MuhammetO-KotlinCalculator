<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorDarkBackground"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/resultTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:fontFamily="@font/sofiapro_font_family"
        android:gravity="end|bottom"
        android:text="45 + (1250 x 100) / 10"
        android:textColor="@color/colorDarkText50Opacity"
        android:textFontWeight="300"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/formulaTextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.4"
        android:fontFamily="@font/sofiapro_font_family"
        android:gravity="end|top"
        android:maxLines="1"
        android:text="12,545"
        android:textColor="@color/colorDarkText"
        android:textFontWeight="300"
        android:textSize="50sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:paddingVertical="7dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:fontFamily="@font/sofiapro_font_family"
                android:text="@string/e"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkText"
                android:textFontWeight="300"
                android:textSize="25sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:fontFamily="@font/sofiapro_font_family"
                android:text="@string/pi"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkText"
                android:textFontWeight="300"
                android:textSize="25sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:fontFamily="@font/sofiapro_font_family"
                android:text="@string/sin"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkText"
                android:textFontWeight="300"
                android:textSize="25sp"
                tools:ignore="ButtonStyle" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:fontFamily="@font/sofiapro_font_family"
                android:text="@string/deg"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/colorDarkText"
                android:textFontWeight="300"
                android:textSize="25sp"
                tools:ignore="ButtonStyle" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="7dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_operator_style"
                android:textColor="@color/colorDarkText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="7dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_operator_style"
                android:textColor="@color/colorDarkText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="7dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_operator_style"

                android:textColor="@color/colorDarkText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:paddingVertical="7dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_operator_style"
                android:textColor="@color/colorDarkText" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="18"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:background="@drawable/button_container_style"
                android:textColor="@color/colorDarkText" />
        </TableRow>
    </TableLayout>


</LinearLayout>